@using System.Globalization
@using Microsoft.JSInterop
@using Shared_Razor_Components.Services
@using Newtonsoft.Json
@using System.ComponentModel
@using BlazorBootstrap
@using Microsoft.AspNetCore.Components.Forms;
@inherits InputCheckbox;

<div class="apply-component">
    <div class="input-area @CssClass" id="@Id" @onclick="ChangeValueOnClick">
        @if (!string.IsNullOrEmpty(LabelText))
        {
            <label for="actual-input">@LabelText</label>
        }
        <input id="first-input" type="checkbox" hidden @bind-value="@CurrentValue">
        <div id="input-animation">
            <span id="first-text-input" class="@(CurrentValue ? "input-activated" : "")">@FirstString</span>
            <span id="second-text-input" class="@(CurrentValue ? "" : "input-activated")">@SecondString</span>
        </div>
    </div>
</div>

